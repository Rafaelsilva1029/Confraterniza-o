{
  "version": 2,
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "vite",
  "env": {
    "DATABASE_URL": {
      "description": "URL de conexão do banco de dados Supabase (MySQL/TiDB)"
    },
    "JWT_SECRET": {
      "description": "Chave secreta para assinar tokens JWT de sessão"
    },
    "VITE_APP_ID": {
      "description": "ID da aplicação OAuth Manus"
    },
    "VITE_APP_TITLE": {
      "description": "Título da aplicação"
    },
    "VITE_APP_LOGO": {
      "description": "URL do logo da aplicação"
    },
    "OAUTH_SERVER_URL": {
      "description": "URL do servidor OAuth Manus"
    },
    "VITE_OAUTH_PORTAL_URL": {
      "description": "URL do portal OAuth Manus para login"
    },
    "OWNER_NAME": {
      "description": "Nome do proprietário da aplicação"
    },
    "OWNER_OPEN_ID": {
      "description": "ID aberto do proprietário"
    },
    "BUILT_IN_FORGE_API_URL": {
      "description": "URL da API Forge interna do Manus"
    },
    "BUILT_IN_FORGE_API_KEY": {
      "description": "Chave de API Forge interna do Manus"
    },
    "VITE_FRONTEND_FORGE_API_URL": {
      "description": "URL da API Forge para frontend"
    },
    "VITE_FRONTEND_FORGE_API_KEY": {
      "description": "Chave de API Forge para frontend"
    },
    "VITE_ANALYTICS_ENDPOINT": {
      "description": "Endpoint de analytics"
    },
    "VITE_ANALYTICS_WEBSITE_ID": {
      "description": "ID do website para analytics"
    }
  },
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
